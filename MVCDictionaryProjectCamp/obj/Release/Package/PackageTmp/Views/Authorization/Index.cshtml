@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin Authorization Sayfası...</h2>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Kullanıcı Mail</th>
        <th>Yetki</th>
        <th>Status</th>
        <th>Pasif YAP</th>
        <th>Yetki Değiştir</th>
    </tr>
    
        @foreach (var item in Model)
        {
<tr>
    <td>@item.AdminID</td>
    <td>@item.AdminUserName</td>
    <td>@item.AdminRole</td>
    <td>Aktif</td>
    <td><a href="#" class="btn btn-danger">Pasif Yap</a></td>
    <td><a href="/Authorization/EditAdmin/@item.AdminID" class="btn btn-success">Yetki Değiştir</a></td>
</tr>
        }
   


</table>
<a href="/Authorization/AddAdmin" class="btn btn-primary">Yeni Admin</a>